/* pages/my/my.wxss */
page{
  background-color: #ededed;
}
.biao{
  font-size:50rpx;
  color: #ccc;
  margin-bottom:40rpx;  
}
.userinfo{
  position: relative;  
  width: 750rpx;  
  height: 320rpx;  
  color: #000;  
  display: flex; 
  font-size:40rpx;  
  flex-direction: column;  
  align-items: center;
  background-color: #fff;
}
.userinfo-avatar{
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-top:60rpx;   
  border: 2rpx solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2); 
}
.userindex{
  margin-top:40rpx;
  background-color:#fff;
  padding:0 40rpx;   
}
.userindex view{
  width: 100%;
  height: 80rpx;
  border-bottom:1px solid #ededed; 
  line-height: 80rpx;
  margin-top:20rpx; 
}
.userindex text{
  float: right;
}
.userindex view:last-child{
  border-bottom:none;
}
.userindex view:active{
  background: #ccc;
}
.userindex image{
  width: 40rpx;
  height: 40rpx;
  margin:10rpx 30rpx 0 0; 
}
.font_14{
  font-size:30rpx; 
  color: #c1c1c1;
  margin-right:20rpx; 
}
.ki{
  font-size:36rpx; 
  color: #000;
}
.dengru{
  position: absolute;
  width: 100%;
  top: 15%;
  left: 0; 
}
.dengru text{
  width: 100%;
  height: 50rpx;
  text-align: center;
  display:block;
  margin-bottom: 30rpx;
}
.OutLog{
  width: 40%;
  margin:0 auto;
  margin-top:60rpx;   
}

.button{
  margin:0 auto;
  width: 50%;
}


